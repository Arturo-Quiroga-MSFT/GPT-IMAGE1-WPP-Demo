# Azure OpenAI Configuration Template
# Copy this file to azure.env and fill in your actual credentials
# NEVER commit the azure.env file with real credentials to git

MODEL_PROVIDER=azure

# Azure OpenAI for Image Generation
# --------------------------------------------------
IMAGEGEN_AOAI_RESOURCE=https://your-endpoint.openai.azure.com/
IMAGEGEN_DEPLOYMENT=gpt-image-1
IMAGEGEN_AOAI_API_KEY=your-api-key-here

# Azure OpenAI for LLM (Optional - for chat/text features)
# --------------------------------------------------
LLM_AOAI_RESOURCE=https://your-llm-endpoint.openai.azure.com
LLM_DEPLOYMENT=gpt-4
LLM_AOAI_API_KEY=your-llm-api-key-here

# Azure Blob Storage (Optional - for cloud storage)
# --------------------------------------------------
AZURE_BLOB_SERVICE_URL=https://your-storage.blob.core.windows.net
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_BLOB_IMAGE_CONTAINER=images

